            <TextBlock Text="Please enter the key point" Height="18" Margin="0,0,459,0" Width="200"/>
            <TextBox Height="20" x:Name="seach_block" Margin="116,0,120,0" Width="300"/>
            <Button x:Name="serch" Content="Seach" HorizontalAlignment="Center" Height="30" Click="serch_Click" Margin="291,0,290,0" VerticalContentAlignment="Bottom" Width="80"/>
        </StackPanel>
        <Grid Grid.Row ="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


